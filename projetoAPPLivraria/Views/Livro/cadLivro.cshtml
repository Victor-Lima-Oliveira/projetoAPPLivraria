@model projetoAPPLivraria.Models.Livro

@{
    ViewData["Title"] = "- Cadastro Livro";
}

<h1>Cadastro Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="cadLivro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RefAutor" class="control-label"></label>
                <div>
                    @Html.DropDownListFor(model => model.RefAutor.id, ViewBag.ListaAutores as SelectList, "Selecione o autor", 
                    htmlAttributes: new {@class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                <label asp-for="nomeLivro" class="control-label"></label>
                <input asp-for="nomeLivro" class="form-control" />
                <span asp-validation-for="nomeLivro" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom:10px">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
