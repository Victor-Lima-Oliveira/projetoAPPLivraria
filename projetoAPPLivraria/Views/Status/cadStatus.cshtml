@model projetoAPPLivraria.Models.Status

@{
    ViewData["Title"] = "- Adicionar Status";
}

<h1>Adcionar Status</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="cadStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="nomeStatus" class="control-label"></label>
                <input asp-for="nomeStatus" class="form-control" />
                <span asp-validation-for="nomeStatus" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px; margin-bottom:10px">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
