@model projetoAPPLivraria.Models.Autor

@{
    ViewData["Title"] = "- Edição Autor";
}

<h1>Editar os dados do autor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="editAutor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                <label asp-for="nomeAutor" class="control-label"></label>
                <input asp-for="nomeAutor" class="form-control" />
                <span asp-validation-for="nomeAutor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Refstatus" class="control-label"></label>
                <div class="col-md-12" style="width:inherit">
                    @Html.DropDownListFor(model => model.Refstatus.codStatus, ViewBag.listaStatus as SelectList, "Selecione o Status",
                             htmlAttributes: new { @class = "form-control" })
                </div>
            </div>


      
            <div class="form-group" style="margin-top:10px; margin-bottom:10px">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
