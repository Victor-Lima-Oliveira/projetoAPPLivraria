@model projetoAPPLivraria.Models.Status

@{
    ViewData["Title"] = "atualizarStatus";
}

<h1>atualizarStatus</h1>

<h4>Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="atualizarStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @Html.HiddenFor(model => model.codStatus)
            <div class="form-group">
                <label asp-for="nomeStatus" class="control-label"></label>
                <input asp-for="nomeStatus" class="form-control" />
                <span asp-validation-for="nomeStatus" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
