@model projetoAPPLivraria.Models.Autor

@{
    ViewData["Title"] = "Cadastro de autor";
}

<h1>Cadastro de autor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadAutor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomeAutor" class="control-label"></label>
                <input asp-for="nomeAutor" class="form-control" />
                <span asp-validation-for="nomeAutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <input asp-for="status" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
